<%= form_with(model: Price, url: product_prices_path, method: "post") do |f| %>
  <div class="modal-header">
    <h5 class="modal-title" id="staticBackdropLabel">Buy now</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  <div class="modal-body">
    <h4>Do you want to buy now</h4>
    <div class="mb-3 row d-flex align-items-center">
      <div><%= f.hidden_field :product_id, :value => "#{product.id}" %></div>
      <div><%= f.hidden_field :price, :value => "#{product.buy_now}" %></div>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <%= f.submit '  Buy  ', class: 'btn btn-success' %>
  </div>
<% end %>